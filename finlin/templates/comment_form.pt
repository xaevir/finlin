<h3>Comment</h3>
<p>
    For links just precede the url with http://
</p>
<form action="${save_url}" method="post" 
        id="comment-form">
    <div>
      <textarea name="body"></textarea>
    </div>
    <div>
      <input type="text" name="username"/>
      <label for="username">Name (Required)</label>
    </div>
    <div>
      <input type="text" name="email"/>
      <label for="email">Email (Required but never displayed)</label>
    </div>
     <div>
      <input class="button roundify blue shadow" type="submit" 
             name="form.submitted" value="${submit_label}"/>
    </div>
  </form>
