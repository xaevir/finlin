<html metal:use-macro="main">
    <div metal:fill-slot="body" id="company_form">
        <form action="${save_url}" method="post">

            <label>Name</label>
            <input name="name" id="name" type="text"/>

            <label>Ticker</label>
            <input name="ticker" id="ticker" type="text" style="width:5em"/>

            <label>Website</label>
            <input name="website" type="text"/>

            <label>Street</label>
            <input name="street" type="text"/>

            <label>Street 2</label>
            <input name="street2" type="text"/>

            <label>City</label>
            <input name="city" type="text"/>

            <label>State</label>
            <input name="state" type="text"/>

            <label>Zip</label>
            <input name="zip" type="text"/>

            <label>Description</label>
            <textarea name="description" id="description"></textarea>

            <label>Significant developments</label>
            <textarea name="significant_developments"></textarea>

            <label>Business Strategy</label>
            <textarea name="business_strategy"></textarea>

            <label>Competition</label>
            <textarea name="competition"></textarea>

            <label>Questions</label>
            <textarea name="questions" id="questions"></textarea>

            <input type="submit" name="form.submitted" value="Save"/>
        </form>
    </div>
    <div metal:fill-slot="footer-js" id="footer-js">
        <script src="${request.static_url('finlin:static/js/TextArea_Resizer_1.0.4/jquery.textarearesizer.compressed.js')}"></script>
        <script type="text/javascript">
            $('textarea.resizable:not(.processed)').TextAreaResizer();
        </script>
    </div>
</html>
