<html metal:use-macro="main">
  <div metal:fill-slot="body" id="company_form">
    <form action="${save_url}" method="post">
      <div>
        <label>Name</label>
      </div>
      <p>
        <input name="name" type="text"/>
      </p>
      <div>
        <label>Ticker</label>
      </div>
      <p>
        <input name="ticker" type="text" style="width:5em"/>
      </p>
      <div>
        <label>Overview</label>
      </div>
      <p>
        <textarea name="overview"></textarea>
      </p>
      <div>
        <label>Growth Strategy</label>
      </div>
      <p>
        <textarea name="growth_strategy"></textarea>
      </p>
      <div>
        <label>Competitive Advantage</label>
      </div>
      <p>
        <textarea name="competitive_advantage"></textarea>
      </p>

      <p class="field">
        <input type="submit" name="form.submitted" value="Save"/>
      </p>
    </form>
  </div>
</html>
