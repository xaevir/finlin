<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
    <title>Finlin</title>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>
    <link rel="shortcut icon"
        href="${request.static_url('finlin:static/favicon.ico')}" />
    <link rel="stylesheet"
        href="${request.static_url('finlin:static/reset-fonts-grids.css')}"
        type="text/css" media="screen" charset="utf-8" />

    <link rel="stylesheet"
        href="${request.static_url('finlin:static/main.css')}"
        type="text/css" media="screen" charset="utf-8" />
    <!-- this is a test -->
    <script src="${request.static_url('finlin:static/js/jquery.js')}"></script>
    <script src="${request.static_url('finlin:static/js/cufon-yui.js')}"></script>
    <script src="${request.static_url('finlin:static/js/gotham_rounded_350.font.js')}"></script>
    <script src="${request.static_url('finlin:static/js/Bembo_400-Bembo_700.font.js')}"></script>
    <script src="${request.static_url('finlin:static/js/Bembo_400-Bembo_700.font.js')}"></script>

    <script type="text/javascript">
        Cufon.replace('#nav a', { fontFamily: 'gotham rounded' });
        Cufon.replace('h1', { fontFamily: 'Bembo' });
        Cufon.replace('#index h2', { fontFamily: 'Bembo' });
        Cufon.replace('#index h3', { fontFamily: 'Bembo' });
        Cufon.replace('.bembo', { fontFamily: 'Bembo' });
    </script>


    </head>

<body>
<div id="doc2">
    <div id="hd" class="clearfix">
        <a id="logo" href="${request.application_url}">
            <img src="${request.static_url('finlin:static/logo.png')}" />
        </a>
        <a style="float: right" href="${request.application_url}">
            <img src="${request.static_url('finlin:static/otc.png')}" />
        </a>

        <div id="nav">
            <ul class="clearfix">
                <li>
                    <a class="roundify" href="${request.application_url}">Home</a>
                </li>
                <li> <a class="roundify" href="${request.application_url}">Company Analyses</a> </li>
                <li> <a class="roundify" href="${request.application_url}">About</a> </li>
                <li> <a class="roundify" href="${request.application_url}/contact">Contact</a>  </li> 
            </ul>
        </div>    
    </div>
    <div id="bd">
        <div id="flash" 
          tal:define="message request.session.pop_flash()"
          tal:condition="message">
          <span class="message"
                tal:repeat="flash message"
                tal:content="flash" />
        </div>
        <div metal:define-slot="body" id="bd-content">
          This is the body.
        </div>
    </div>
    <div id="ft">
        <p style="float: left;">
            &copy; Finlin 2011
        </p>
        <p style="float: right; padding-right:20px;" id="swag">
            <img src="${request.static_url('finlin:static/pyramid.png')}"/>
            <img src="${request.static_url('finlin:static/mongodb.png')}"/>
         </p>
        <p style="float:right; padding-right: 7px;">
            Powered with:
        </p>
    </div>
</div>
</body>
</html>
