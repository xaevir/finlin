<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
  <title>Finlin</title>
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>
  <link rel="shortcut icon"
        href="${request.static_url('finlin:static/favicon.ico')}" />
  <link rel="stylesheet"
        href="${request.static_url('finlin:static/reset-fonts-grids.css')}"
        type="text/css" media="screen" charset="utf-8" />

  <link rel="stylesheet"
        href="${request.static_url('finlin:static/main.css')}"
        type="text/css" media="screen" charset="utf-8" />
</head>

<body>
  <div id="doc">

    <div id="hd">
      <a href="${request.application_url}" id="logo"><img 
        src="${request.static_url('finlin:static/logo.png')}" style="width: 78px; 
        height: 66px" /></a>
    </div>

      <div id="flash" 
        tal:define="message request.session.pop_flash()"
        tal:condition="message">
        <span class="message"
              tal:repeat="flash message"
              tal:content="flash" />
      </div>

    <div id="bd">
      <div metal:define-slot="body">
        This is the body.
      </div>
    </div>

    <p>
      <a href="${request.application_url + '/new_company'}">Add Company</a>
    </p>

    <div id="ft">
      <p>
        &copy; Finlin 2011
      </p>        
    </div>
  </div>
</body>
</html>
