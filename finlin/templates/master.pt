<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
    <title>Finlin</title>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>
    <link rel="shortcut icon"
        href="${request.static_url('finlin:static/favicon.ico')}" />
        
    <link metal:define-slot="head-css"/>

    <link rel="stylesheet"
        href="${request.static_url('finlin:static/main.css')}"
        type="text/css"/>
    
    <script src="${request.static_url('finlin:static/js/jquery.js')}"></script>
    <script src="${request.static_url('finlin:static/js/cufon-yui.js')}"></script>
    <script src="${request.static_url('finlin:static/js/Bembo_400-Bembo_700.font.js')}"></script>

    <script type="text/javascript">
        Cufon.replace('h1', { fontFamily: 'Bembo' });
        Cufon.replace('#logo #logo-img', { fontFamily: 'Bembo' });
    </script>

    </head>

<body>
<div id="hd">
    <div class="content clearfix">        
    <a id="logo" class="clearfix" href="${request.application_url}">
        <span id="logo-svg"></span>
        <span id="logo-img">FINLIN</span>
        <span id="logo-desc">The broken window theory<br />applied to the OTC market</span>
    </a>
        <div id="nav" class="clearfix">
            <ul class="clearfix">
                <li> <a href="${request.application_url}">Companies</a> </li>
                <li> <a href="${request.application_url}">About</a> </li>
                <li> <a href="${request.application_url}/contact">Contact</a>  </li> 
                <li><a id="login" href="#">Create Account | Sign in</a></li>
            </ul>
        </div>    
    </div>
</div>

<div id="doc2">

    <div id="bd">
        <div id="flash" 
          tal:define="message request.session.pop_flash()"
          tal:condition="message">
          <span class="message"
                tal:repeat="flash message"
                tal:content="flash" />
        </div>
        <div metal:define-slot="body" id="bd-content">
          This is the body.
        </div>
    </div>
</div>
<div id="ft">
    <div class="content">
        <ul id="ft-nav">
            <li><a href="about">About</a></li>
            <li><a href="contact">Contact</a></li>
        </ul>
        <p style="float: left;">
            &copy; Finlin 2011
        </p>
        <div id="swag">
        <p style="float: right; padding-right:20px;">
            <a href="http://pylonsproject.org/">Pyramid</a> |
            <a href="http://www.mongodb.org/">mongoDB</a>
         </p>
        <p style="float:right; padding-right: 7px;">
            Powered with:
        </p>
        </div>
    </div>
</div>

<script type="text/javascript"> Cufon.now(); </script>
<script type="text/javascript" src="${request.static_url('finlin:static/js/raphael.js')}"></script>
<script src="${request.static_url('finlin:static/js/main.js')}"></script>
